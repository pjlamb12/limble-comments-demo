{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@limble-demo/limble-demo/feature/comments": [
        "libs/limble-demo/feature/comments/src/index.ts"
      ],
      "@limble-demo/limble-demo/util/comments": [
        "libs/limble-demo/util/comments/src/index.ts"
      ],
      "@limble-demo/shared/directives": ["libs/shared/directives/src/index.ts"],
      "@limble-demo/shared/util": ["libs/shared/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
